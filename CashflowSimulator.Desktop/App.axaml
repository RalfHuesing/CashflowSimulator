<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:meta="clr-namespace:CashflowSimulator.Desktop.Features.Meta;assembly=CashflowSimulator.Desktop"
             x:Class="CashflowSimulator.Desktop.App"
             RequestedThemeVariant="Light">
    <Application.DataTemplates>
        <DataTemplate DataType="meta:MetaEditViewModel">
            <meta:MetaEditView DataContext="{Binding}"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"/>
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        
        <StyleInclude Source="/Common/Themes/Default.axaml" />
    </Application.Styles>
</Application>