<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:meta="clr-namespace:CashflowSimulator.Desktop.Features.Meta;assembly=CashflowSimulator.Desktop"
             xmlns:settings="clr-namespace:CashflowSimulator.Desktop.Features.Settings;assembly=CashflowSimulator.Desktop"
             x:Class="CashflowSimulator.Desktop.App"
             RequestedThemeVariant="Light">
    <Application.DataTemplates>
        <DataTemplate DataType="meta:MetaEditViewModel">
            <meta:MetaEditView DataContext="{Binding}"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"/>
        </DataTemplate>
        <DataTemplate DataType="settings:SettingsViewModel">
            <settings:SettingsView DataContext="{Binding}"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>
        </DataTemplate>
    </Application.DataTemplates>

    <!-- Basis-Themes hier, damit die App sauber startet; Projekt-Theme wird in MainWindow.OnLoaded angewendet. -->
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Common/Themes/Default.axaml" />
    </Application.Styles>
</Application>