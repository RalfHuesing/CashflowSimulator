<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:CashflowSimulator.Desktop.Common.Components"
             x:Class="CashflowSimulator.Desktop.Common.Components.FeaturePageView"
             x:Name="Root">
  <Border Background="{StaticResource SurfaceBrush}"
          Padding="8"
          MinHeight="120"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
    <StackPanel Spacing="{StaticResource SpacingMediumValue}"
                Margin="{StaticResource SpacingLarge}">
      <TextBlock Text="{Binding #Root.Title}"
                 Classes="feature-page-title"
                 Foreground="{StaticResource TextPrimaryBrush}"/>
      <TextBlock Text="{Binding #Root.Description}"
                 Classes="feature-page-description"
                 Foreground="{StaticResource TextSecondaryBrush}"/>
      <ContentPresenter Content="{Binding #Root.Content}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"/>
    </StackPanel>
  </Border>
</UserControl>
