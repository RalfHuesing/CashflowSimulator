<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- AppBar (Header) -->
  <Style Selector="Border.appbar">
    <Setter Property="BoxShadow" Value="0 2 6 0 #1A000000"/>
    <Setter Property="MinHeight" Value="64"/>
    <Setter Property="Padding" Value="16,0"/>
  </Style>
  <Style Selector="TextBlock.banner-title">
    <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource BannerTextBrush}"/>
  </Style>
  <Style Selector="TextBlock.brand-light">
    <Setter Property="FontWeight" Value="Light"/>
    <Setter Property="Opacity" Value="0.9"/>
  </Style>
  <Style Selector="TextBlock.brand-bold">
    <Setter Property="FontWeight" Value="Bold"/>
  </Style>
  <!-- Drawer-Footer (Szenario-Verwaltung) -->
  <Style Selector="Border.drawer-footer">
    <Setter Property="Background" Value="{StaticResource DrawerFooterBgBrush}"/>
    <Setter Property="BorderThickness" Value="0,1,0,0"/>
    <Setter Property="BorderBrush" Value="#0DFFFFFF"/>
    <Setter Property="Padding" Value="16"/>
  </Style>
  <Style Selector="Border.action-card">
    <Setter Property="Background" Value="{StaticResource DrawerActionCardBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="{StaticResource DrawerActionCardBorderBrush}"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="12"/>
    <Setter Property="BoxShadow" Value="0 4 6 0 #1A000000"/>
  </Style>
  <Style Selector="TextBlock.action-card-header">
    <Setter Property="Foreground" Value="#80FFFFFF"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Margin" Value="0,0,0,12"/>
  </Style>
  <Style Selector="Border.bottombar-divider">
    <Setter Property="BorderThickness" Value="0,1,0,0"/>
    <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}"/>
  </Style>
</Styles>
