<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Form input: flat border, dynamisch maximale Breite (Stretch) -->
    <Style Selector="TextBox.form-input">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FormInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="6,8"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="TextBox.form-input /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource FormInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>
    <Style Selector="TextBox.form-input:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style Selector="TextBox.form-input.has-error /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource FormInputErrorBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style Selector="NumericUpDown.form-input">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FormInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="6,8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="NumericUpDown.form-input.has-error">
        <Setter Property="BorderBrush" Value="{StaticResource FormInputErrorBorderBrush}"/>
    </Style>

    <!-- CalendarDatePicker: TextBox-ähnlich, volle Breite wie andere Form-Inputs (Desktop-freundlich) -->
    <Style Selector="CalendarDatePicker.form-input">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FormInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="6,8"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="UseFloatingWatermark" Value="False"/>
    </Style>

    <!-- ComboBox: bündig im Formular-Raster, volle Breite wie andere Form-Inputs -->
    <Style Selector="ComboBox.form-input">
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</Styles>
