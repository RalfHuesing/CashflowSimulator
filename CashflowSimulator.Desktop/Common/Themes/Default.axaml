<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=netstandard">

    <Styles.Resources>
        <Color x:Key="SidebarBackgroundColor">#0F172A</Color>
        <Color x:Key="ContentBackgroundColor">#F3F4F6</Color>
        <Color x:Key="SurfaceColor">#FFFFFF</Color>
        
        <!-- Bootstrap-style button colors -->
        <Color x:Key="BsPrimaryColor">#0d6efd</Color>
        <Color x:Key="BsPrimaryHoverColor">#0b5ed7</Color>
        <Color x:Key="BsSecondaryColor">#6c757d</Color>
        <Color x:Key="BsSecondaryHoverColor">#5c636a</Color>
        <Color x:Key="BsSuccessColor">#198754</Color>
        <Color x:Key="BsSuccessHoverColor">#157347</Color>
        <Color x:Key="BsDangerColor">#dc3545</Color>
        <Color x:Key="BsDangerHoverColor">#bb2d3b</Color>
        <Color x:Key="PrimaryActionColor">#0d6efd</Color>
        <Color x:Key="PrimaryActionHoverColor">#0b5ed7</Color>
        <Color x:Key="TextPrimaryColor">#111827</Color>
        <Color x:Key="TextSecondaryColor">#6B7280</Color>
        <Color x:Key="TextOnDarkColor">#F9FAFB</Color>
        <Color x:Key="PlaceholderIconColor">#E5E7EB</Color>

        <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}" />
        <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
        <SolidColorBrush x:Key="BsPrimaryBrush" Color="{StaticResource BsPrimaryColor}" />
        <SolidColorBrush x:Key="BsPrimaryHoverBrush" Color="{StaticResource BsPrimaryHoverColor}" />
        <SolidColorBrush x:Key="BsSecondaryBrush" Color="{StaticResource BsSecondaryColor}" />
        <SolidColorBrush x:Key="BsSecondaryHoverBrush" Color="{StaticResource BsSecondaryHoverColor}" />
        <SolidColorBrush x:Key="BsSuccessBrush" Color="{StaticResource BsSuccessColor}" />
        <SolidColorBrush x:Key="BsSuccessHoverBrush" Color="{StaticResource BsSuccessHoverColor}" />
        <SolidColorBrush x:Key="BsDangerBrush" Color="{StaticResource BsDangerColor}" />
        <SolidColorBrush x:Key="BsDangerHoverBrush" Color="{StaticResource BsDangerHoverColor}" />
        <SolidColorBrush x:Key="PrimaryActionBrush" Color="{StaticResource PrimaryActionColor}" />
        <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="{StaticResource PrimaryActionHoverColor}" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
        <SolidColorBrush x:Key="TextOnDarkBrush" Color="{StaticResource TextOnDarkColor}" />
        <SolidColorBrush x:Key="PlaceholderIconBrush" Color="{StaticResource PlaceholderIconColor}" />

        <CornerRadius x:Key="ControlCornerRadius">2</CornerRadius>
        <Thickness x:Key="PagePadding">24</Thickness>
        <Thickness x:Key="SidebarLogoMargin">0,0,0,40</Thickness>
        <Thickness x:Key="ContentHeaderMargin">0,0,0,24</Thickness>
        <Thickness x:Key="HeaderIconMargin">0,0,16,0</Thickness>
        <Thickness x:Key="NavItemMargin">0,2</Thickness>
        <Thickness x:Key="NavIconMargin">8,0,0,0</Thickness>
        
        <sys:Double x:Key="SpacingMediumValue">20</sys:Double>
        <sys:Double x:Key="SpacingSmallValue">8</sys:Double>
        <sys:Double x:Key="SidebarWidth">260</sys:Double>
        <sys:Double x:Key="SidebarLogoIconSize">28</sys:Double>
        <sys:Double x:Key="HeaderIconSize">24</sys:Double>
        <sys:Double x:Key="PlaceholderIconSize">64</sys:Double>
        <sys:Double x:Key="NavIconSize">20</sys:Double>
        <sys:Double x:Key="NavItemFontSize">14</sys:Double>
        <Thickness x:Key="SpacingLarge">0</Thickness>

        <!-- Form / dialog layout -->
        <Color x:Key="FormInputBorderColor">#ADADAD</Color>
        <SolidColorBrush x:Key="FormInputBorderBrush" Color="{StaticResource FormInputBorderColor}" />
        <Thickness x:Key="FormLabelMargin">0,0,16,12</Thickness>
        <Thickness x:Key="FormLabelMarginLast">0,0,16,0</Thickness>
        <Thickness x:Key="FormInputMargin">0,0,0,12</Thickness>
        <Thickness x:Key="FormInputMarginLast">0,0,0,0</Thickness>
        <Thickness x:Key="FormHeaderBlockMargin">0,0,0,20</Thickness>
        <Thickness x:Key="FormActionsMargin">0,24,0,0</Thickness>
        <sys:Double x:Key="FormActionsSpacing">12</sys:Double>
        <sys:Double x:Key="FormMaxWidth">600</sys:Double>
    </Styles.Resources>

    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{StaticResource PrimaryActionBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource PrimaryActionHoverBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Style>

    <Style Selector="Button.ghost">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextOnDarkBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#33FFFFFF" /> 
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Style>
    
    <Style Selector="Button.accent">
        <Setter Property="Background" Value="{StaticResource PrimaryActionBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="24,10" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Cursor" Value="Hand" />
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource PrimaryActionHoverBrush}" />
        </Style>
    </Style>

    <!-- Bootstrap-style button templates (bs-primary, bs-secondary, bs-success, bs-danger) -->
    <Style Selector="Button.bs-primary">
        <Setter Property="Background" Value="{StaticResource BsPrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BsPrimaryHoverBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Style>
    <Style Selector="Button.bs-secondary">
        <Setter Property="Background" Value="{StaticResource BsSecondaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BsSecondaryHoverBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Style>
    <Style Selector="Button.bs-success">
        <Setter Property="Background" Value="{StaticResource BsSuccessBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BsSuccessHoverBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Style>
    <Style Selector="Button.bs-danger">
        <Setter Property="Background" Value="{StaticResource BsDangerBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BsDangerHoverBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Style>

    <Style Selector="Border.card">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="BoxShadow" Value="0 4 6 0 #1A000000" /> 
        <Setter Property="Padding" Value="24" />
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <Style Selector="TextBlock.feature-page-title">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style Selector="TextBlock.feature-page-description">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <Style Selector="TextBlock.sidebar-logo-title">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextOnDarkBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.sidebar-section-caption">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Margin" Value="4,0,0,4"/>
    </Style>

    <Style Selector="TextBlock.content-header-label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.placeholder-secondary">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style Selector="Border.header-icon">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="BoxShadow" Value="0 2 4 0 #10000000"/>
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Margin" Value="{StaticResource HeaderIconMargin}"/>
    </Style>

    <Style Selector="TextBlock.nav-item-text">
        <Setter Property="FontSize" Value="{StaticResource NavItemFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextOnDarkBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Form label: used next to form inputs -->
    <Style Selector="TextBlock.form-label">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Form input: Windows-like flat border, stretches to column width -->
    <Style Selector="TextBox.form-input">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource FormInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="6,8"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="TextBox.form-input /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource FormInputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>
    <Style Selector="TextBox.form-input:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

</Styles>