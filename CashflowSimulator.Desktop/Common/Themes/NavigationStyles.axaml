<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Sidebar-Navigation: einheitliche Breite, seriÃ¶ses Finanz-App-Farbschema -->

    <!-- Gruppen-Expander: dunkler Hintergrund (abgesetzt zur Sidebar), helle Schrift -->
    <Style Selector="Expander.nav-group">
        <Setter Property="Background" Value="{StaticResource SidebarNavGroupBackgroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0,2,0,8" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader">
            <Setter Property="Background" Value="{StaticResource SidebarNavGroupBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource SidebarNavGroupHeaderBrush}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="0,6,8,6" />
        </Style>
        <Style Selector="^ /template/ ContentPresenter#PART_ContentSite">
            <Setter Property="Background" Value="{StaticResource SidebarNavGroupBackgroundBrush}" />
        </Style>
        <!-- Hover: Hauptbereich dunkel lassen, nur Chevron-Box hellgrau -->
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader:pointerover /template/ Border#ToggleButtonBackground">
            <Setter Property="Background" Value="{StaticResource SidebarNavGroupBackgroundBrush}" />
        </Style>
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader:pointerover /template/ Border#ExpandCollapseChevronBorder">
            <Setter Property="Background" Value="{StaticResource SidebarNavChevronHoverBackgroundBrush}" />
        </Style>
    </Style>

    <!-- Gruppen-Header-Text: gut lesbar (Bright Silver), mit Teal-Akzent in der View -->
    <Style Selector="TextBlock.nav-group-header">
        <Setter Property="FontSize" Value="{StaticResource NavItemFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource SidebarNavGroupHeaderBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Nav-Items in der Sidebar: klare Schriftfarbe -->
    <Style Selector=".sidebar-navigation TextBlock.nav-item-text">
        <Setter Property="Foreground" Value="{StaticResource SidebarNavItemBrush}" />
    </Style>

    <!-- Nav-Item-Buttons: einheitliche Farbe, Hover passend zur Sidebar -->
    <Style Selector=".sidebar-navigation Button.ghost">
        <Setter Property="Foreground" Value="{StaticResource SidebarNavItemBrush}" />
    </Style>
    <Style Selector=".sidebar-navigation Button.ghost:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource SidebarNavItemHoverBrush}" />
        <Setter Property="Foreground" Value="{StaticResource SidebarNavItemBrush}" />
    </Style>
</Styles>
