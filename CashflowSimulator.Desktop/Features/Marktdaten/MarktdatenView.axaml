<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.Marktdaten"
             xmlns:controls="using:CashflowSimulator.Desktop.Common.Controls"
             xmlns:behaviors="using:CashflowSimulator.Desktop.Common.Behaviors"
             xmlns:ext="using:CashflowSimulator.Desktop.Common.Extensions"
             xmlns:fi="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="CashflowSimulator.Desktop.Features.Marktdaten.MarktdatenView"
             x:DataType="vm:MarktdatenViewModel">

    <controls:FeatureLayoutView Title="Marktdaten"
                                Description="Stochastische Marktfaktoren (z. B. Inflation, Aktienindex) für die Simulation. Hier legen Sie Modelltyp und Parameter fest.">
        <controls:FeatureLayoutView.ActionContent>
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ToolbarButtonSpacing}">
                <Button Classes="toolbar-button primary" Command="{Binding NewCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Add" FontSize="16"/>
                        <TextBlock Text="Neu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Save" FontSize="16"/>
                        <TextBlock Text="Speichern" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Delete" FontSize="16"/>
                        <TextBlock Text="Löschen" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </controls:FeatureLayoutView.ActionContent>
        <controls:MasterDetailView>
            <controls:MasterDetailView.MasterContent>
                <DataGrid ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Modell" Width="140" Binding="{Binding ModelType, Converter={StaticResource EnumDescriptionConverter}}"/>
                        <DataGridTemplateColumn Width="90" SortMemberPath="ExpectedReturn">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Drift" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ExpectedReturn, StringFormat='{}{0:P2}'}"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="90" SortMemberPath="Volatility">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Vola" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Volatility, StringFormat='{}{0:P2}'}"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="90" SortMemberPath="InitialValue">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Initial" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding InitialValue}"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </controls:MasterDetailView.MasterContent>
            <controls:MasterDetailView.DetailContent>
                <Grid ColumnDefinitions="200, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Classes="form-input"
                             Text="{Binding Name}" Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="Name"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="Name"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Modelltyp"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Classes="form-input"
                              ItemsSource="{Binding ModelTypeOptions}"
                              SelectedItem="{Binding SelectedModelTypeOption}"
                              Margin="{StaticResource FormInputMargin}"
                              behaviors:FocusHelpBehavior.HelpKey="ModelType"
                              behaviors:FocusHelpBehavior.ErrorPropertyName="ModelType">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="ext:EnumDisplayEntry">
                                <TextBlock Text="{Binding Display}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Erwartete Rendite / Drift (μ)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="2" Grid.Column="1" Classes="form-input"
                                   Value="{Binding ExpectedReturn}" Increment="0.01"
                                   Margin="{StaticResource FormInputMargin}"
                                   behaviors:FocusHelpBehavior.HelpKey="ExpectedReturn"
                                   behaviors:FocusHelpBehavior.ErrorPropertyName="ExpectedReturn"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Volatilität (σ)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="3" Grid.Column="1" Classes="form-input"
                                   Value="{Binding Volatility}" Increment="0.01"
                                   Margin="{StaticResource FormInputMargin}"
                                   behaviors:FocusHelpBehavior.HelpKey="Volatility"
                                   behaviors:FocusHelpBehavior.ErrorPropertyName="Volatility"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Mean-Reversion-Speed (θ)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="4" Grid.Column="1" Classes="form-input"
                                   Value="{Binding MeanReversionSpeed}" Increment="0.1"
                                   Margin="{StaticResource FormInputMargin}"
                                   behaviors:FocusHelpBehavior.HelpKey="MeanReversionSpeed"
                                   behaviors:FocusHelpBehavior.ErrorPropertyName="MeanReversionSpeed"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Initialwert"
                               Classes="form-label" Margin="{StaticResource FormLabelMarginLast}"/>
                    <NumericUpDown Grid.Row="5" Grid.Column="1" Classes="form-input"
                                   Value="{Binding InitialValue}" Increment="1"
                                   Margin="{StaticResource FormInputMarginLast}"
                                   behaviors:FocusHelpBehavior.HelpKey="InitialValue"
                                   behaviors:FocusHelpBehavior.ErrorPropertyName="InitialValue"/>
                </Grid>
            </controls:MasterDetailView.DetailContent>
        </controls:MasterDetailView>
    </controls:FeatureLayoutView>
</UserControl>
