<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.AllocationProfiles"
             xmlns:controls="using:CashflowSimulator.Desktop.Common.Controls"
             xmlns:behaviors="using:CashflowSimulator.Desktop.Common.Behaviors"
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:data="using:Avalonia.Data.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="CashflowSimulator.Desktop.Features.AllocationProfiles.AllocationProfilesView"
             x:DataType="vm:AllocationProfilesViewModel"
             x:Name="ThisView">

    <controls:FeatureLayoutView Title="Allokationsprofile"
                                Description="Benannte Soll-Allokationen (z. B. Aufbau 70/30, Rente 60/40). Werden von Lebensphasen referenziert. Die Summe der Gewichte muss 100 % ergeben.">
        <controls:FeatureLayoutView.ActionContent>
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ToolbarButtonSpacing}">
                <Button Classes="toolbar-button primary" Command="{Binding NewCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Add" FontSize="16"/>
                        <TextBlock Text="Neu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Save" FontSize="16"/>
                        <TextBlock Text="Speichern" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Delete" FontSize="16"/>
                        <TextBlock Text="Löschen" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </controls:FeatureLayoutView.ActionContent>
        <controls:MasterDetailView>
            <controls:MasterDetailView.MasterContent>
                <DataGrid ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </controls:MasterDetailView.MasterContent>
            <controls:MasterDetailView.DetailContent>
                <StackPanel Spacing="16">
                    <Grid ColumnDefinitions="200, *" RowDefinitions="Auto, Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Classes="form-input"
                                 Text="{Binding Name}" Margin="{StaticResource FormInputMargin}"
                                 behaviors:FocusHelpBehavior.HelpKey="Name"
                                 behaviors:FocusHelpBehavior.ErrorPropertyName="Name"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Zielgewichtungen (Summe = 100 %)"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8" Margin="{StaticResource FormInputMargin}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Command="{Binding AddEntryCommand}" Classes="toolbar-button">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <fi:SymbolIcon Symbol="Add" FontSize="14"/>
                                        <TextBlock Text="Eintrag hinzufügen" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding RemoveEntryCommand}" Classes="toolbar-button"
                                        IsEnabled="{Binding SelectedEntry, Converter={x:Static data:ObjectConverters.IsNotNull}}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <fi:SymbolIcon Symbol="Delete" FontSize="14"/>
                                        <TextBlock Text="Eintrag entfernen" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding EntryRows}"
                                      SelectedItem="{Binding SelectedEntry}"
                                      IsReadOnly="False"
                                      SelectionMode="Single"
                                      MinHeight="120"
                                      behaviors:FocusHelpBehavior.HelpKey="Entries">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Anlageklasse" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate DataType="vm:AllocationProfileEntryRow">
                                                <ComboBox ItemsSource="{Binding DataContext.AssetClassOptions, ElementName=ThisView}"
                                                          SelectedItem="{Binding SelectedAssetClassOption}"
                                                          MinWidth="140"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Zielgewichtung" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate DataType="vm:AllocationProfileEntryRow">
                                                <NumericUpDown Value="{Binding TargetWeight}"
                                                               Minimum="0" Maximum="1"
                                                               Increment="0.05"
                                                               FormatString="P0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock Text="{Binding TotalWeightPercentText}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding WeightSumWarning}"
                                       IsVisible="{Binding WeightSumWarning, Converter={x:Static data:ObjectConverters.IsNotNull}}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:MasterDetailView.DetailContent>
        </controls:MasterDetailView>
    </controls:FeatureLayoutView>
</UserControl>
