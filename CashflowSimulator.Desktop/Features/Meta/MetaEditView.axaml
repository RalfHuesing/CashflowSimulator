<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.Meta"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CashflowSimulator.Desktop.Features.Meta.MetaEditView"
             x:DataType="vm:MetaEditViewModel">

    <StackPanel Spacing="{StaticResource SpacingMediumValue}"
                Margin="{StaticResource SpacingLarge}">
        <TextBlock Text="Szenario-Einstellungen"
                   Classes="feature-page-title"
                   Foreground="{StaticResource TextPrimaryBrush}"/>
        <TextBlock Text="Hier können Metadaten des aktuellen Szenarios bearbeitet werden."
                   Classes="feature-page-description"
                   Foreground="{StaticResource TextSecondaryBrush}"/>

        <StackPanel Spacing="20" MaxWidth="600" HorizontalAlignment="Left">
            <StackPanel Spacing="5">
                <TextBlock Text="Szenario Name" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBox Text="{Binding ScenarioName}" Watermark="Name eingeben..." />
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Erstellt am" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Opacity="0.8"/>
            </StackPanel>

            <Button Command="{Binding ApplyCommand}"
                    Content="Übernehmen"
                    Classes="accent" />
        </StackPanel>
    </StackPanel>
</UserControl>
