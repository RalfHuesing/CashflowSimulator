<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.Meta"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CashflowSimulator.Desktop.Features.Meta.MetaEditView"
             x:DataType="vm:MetaEditViewModel">

    <Grid RowDefinitions="Auto, Auto, *" Margin="{StaticResource SpacingLarge}">
        <StackPanel Grid.Row="0" Spacing="{StaticResource SpacingSmallValue}"
                    Margin="{StaticResource FormHeaderBlockMargin}"
                    HorizontalAlignment="Left">
            <TextBlock Text="Szenario-Einstellungen"
                       Classes="feature-page-title"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Hier können Metadaten des aktuellen Szenarios bearbeitet werden."
                       Classes="feature-page-description"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto"
              MaxWidth="{StaticResource FormMaxWidth}" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Szenario Name"
                       Classes="form-label"
                       Margin="{StaticResource FormLabelMargin}"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ScenarioName}"
                     Classes="form-input"
                     Watermark="Name eingeben..." Margin="{StaticResource FormInputMargin}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Erstellt am"
                       Classes="form-label"
                       Margin="{StaticResource FormLabelMarginLast}"/>
            <TextBlock Grid.Row="1" Grid.Column="1"
                       Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Opacity="0.8" VerticalAlignment="Center"/>

        </Grid>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Orientation="Horizontal" Spacing="{StaticResource FormActionsSpacing}"
                    Margin="{StaticResource FormActionsMargin}">
            <Button Command="{Binding DiscardCommand}"
                    Content="Verwerfen"
                    Classes="bs-secondary" />
            <Button Command="{Binding ApplyCommand}"
                    Content="Übernehmen"
                    Classes="bs-primary" />
        </StackPanel>
    </Grid>
</UserControl>
