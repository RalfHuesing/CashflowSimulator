<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:meta="clr-namespace:CashflowSimulator.Desktop.Features.Meta"
        x:Class="CashflowSimulator.Desktop.Features.Meta.MetaEditDialog"
        x:DataType="meta:MetaEditDialogViewModel"
        Title="Stammdaten bearbeiten"
        Width="400" Height="220"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="{StaticResource SpacingLarge}" Spacing="{StaticResource SpacingMedium}">
    <TextBlock Text="Szenario-Name" Foreground="{StaticResource SecondaryTextBrush}"/>
    <TextBox Text="{Binding ScenarioName}" Watermark="Name des Szenarios"/>
    <TextBlock Text="{Binding CreatedAt, StringFormat=Erstellt am: {0:dd.MM.yyyy HH:mm}}"
               Foreground="{StaticResource SecondaryTextBrush}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="{StaticResource SpacingMedium}" Margin="{StaticResource SpacingLarge}">
      <Button Content="Abbrechen" Command="{Binding CancelCommand}"/>
      <Button Content="OK" Command="{Binding OkCommand}" IsDefault="True"/>
    </StackPanel>
  </StackPanel>
</Window>
