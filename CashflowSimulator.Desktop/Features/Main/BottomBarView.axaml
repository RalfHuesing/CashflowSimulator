<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:main="clr-namespace:CashflowSimulator.Desktop.Features.Main"
             x:Class="CashflowSimulator.Desktop.Features.Main.BottomBarView"
             x:DataType="main:MainShellViewModel"
             Background="{StaticResource NavBackgroundBrush}">
  <Border Classes="bottombar-divider" Padding="{StaticResource SpacingMedium}" Background="{StaticResource NavBackgroundBrush}">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="{StaticResource SpacingMediumValue}">
      <Button Content="Laden" Command="{Binding LoadCommand}"/>
      <Button Content="Speichern" Command="{Binding SaveCommand}" Classes.primary="True"/>
    </StackPanel>
  </Border>
</UserControl>
