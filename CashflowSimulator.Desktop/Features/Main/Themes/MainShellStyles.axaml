<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Drawer-Navigation: weiÃŸe Schrift, Hover, aktiver Eintrag mit rechtem Rand -->
  <Style Selector="Border.drawer Button.nav-item">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource DrawerTextBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
  </Style>
  <Style Selector="Border.drawer Button.nav-item:pointerover">
    <Setter Property="Background" Value="#1AFFFFFF"/>
    <Setter Property="Foreground" Value="{StaticResource DrawerTextActiveBrush}"/>
  </Style>
  <Style Selector="Border.drawer Button.nav-item.active">
    <Setter Property="Background" Value="{StaticResource DrawerNavActiveBackground}"/>
    <Setter Property="Foreground" Value="{StaticResource DrawerTextActiveBrush}"/>
    <Setter Property="BorderThickness" Value="0,0,4,0"/>
    <Setter Property="BorderBrush" Value="{StaticResource DrawerNavActiveBorder}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>
  <!-- Drawer-Footer-Buttons: outlined, hell auf dunkel -->
  <Style Selector="Border.drawer Button.drawer-action-btn">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource DrawerTextActiveBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#40FFFFFF"/>
  </Style>
  <Style Selector="Border.drawer Button.drawer-action-btn:pointerover">
    <Setter Property="Background" Value="#1AFFFFFF"/>
    <Setter Property="BorderBrush" Value="#CCFFFFFF"/>
  </Style>
  <Style Selector="Border.drawer Button.drawer-action-btn.primary">
    <Setter Property="Background" Value="{StaticResource PrimaryButtonBackground}"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryButtonForeground}"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
  </Style>
</Styles>
