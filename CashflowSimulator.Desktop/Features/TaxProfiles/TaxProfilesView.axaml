<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.TaxProfiles"
             xmlns:controls="using:CashflowSimulator.Desktop.Common.Controls"
             xmlns:behaviors="using:CashflowSimulator.Desktop.Common.Behaviors"
             xmlns:fi="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="CashflowSimulator.Desktop.Features.TaxProfiles.TaxProfilesView"
             x:DataType="vm:TaxProfilesViewModel">

    <controls:FeatureLayoutView Title="Steuerprofile"
                                Description="Steuersätze und Freibeträge pro Lebensphase (z. B. Erwerb vs. Rente). Werden von Lebensphasen referenziert.">
        <controls:FeatureLayoutView.ActionContent>
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ToolbarButtonSpacing}">
                <Button Classes="toolbar-button primary" Command="{Binding NewCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Add" FontSize="16"/>
                        <TextBlock Text="Neu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Save" FontSize="16"/>
                        <TextBlock Text="Speichern" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Delete" FontSize="16"/>
                        <TextBlock Text="Löschen" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </controls:FeatureLayoutView.ActionContent>
        <controls:MasterDetailView>
            <controls:MasterDetailView.MasterContent>
                <DataGrid ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                        <DataGridTemplateColumn Width="90" SortMemberPath="CapitalGainsTaxRate">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="KapESt" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CapitalGainsTaxRate, StringFormat='{}{0:P2}'}"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="90" SortMemberPath="TaxFreeAllowance">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Freibetrag" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TaxFreeAllowance, StringFormat='{}{0:N0} €'}"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </controls:MasterDetailView.MasterContent>
            <controls:MasterDetailView.DetailContent>
                <Grid ColumnDefinitions="200, *" RowDefinitions="Auto, Auto, Auto, Auto">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Classes="form-input"
                             Text="{Binding Name}" Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="Name"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="Name"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Kapitalertragsteuer-Satz (0–100 %)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="1" Grid.Column="1" Classes="form-input"
                                  Value="{Binding CapitalGainsTaxRate}" Increment="0.01"
                                  Minimum="0" Maximum="1"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="CapitalGainsTaxRate"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="CapitalGainsTaxRate"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Freibetrag (€)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="2" Grid.Column="1" Classes="form-input"
                                  Value="{Binding TaxFreeAllowance}" Increment="100"
                                  Minimum="0"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="TaxFreeAllowance"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="TaxFreeAllowance"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Einkommensteuer-Satz (z. B. Rente, 0–100 %)"
                               Classes="form-label" Margin="{StaticResource FormLabelMarginLast}"/>
                    <NumericUpDown Grid.Row="3" Grid.Column="1" Classes="form-input"
                                  Value="{Binding IncomeTaxRate}" Increment="0.01"
                                  Minimum="0" Maximum="1"
                                  Margin="{StaticResource FormInputMarginLast}"
                                  behaviors:FocusHelpBehavior.HelpKey="IncomeTaxRate"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="IncomeTaxRate"/>
                </Grid>
            </controls:MasterDetailView.DetailContent>
        </controls:MasterDetailView>
    </controls:FeatureLayoutView>
</UserControl>
