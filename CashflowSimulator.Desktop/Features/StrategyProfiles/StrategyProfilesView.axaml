<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.StrategyProfiles"
             xmlns:controls="using:CashflowSimulator.Desktop.Common.Controls"
             xmlns:behaviors="using:CashflowSimulator.Desktop.Common.Behaviors"
             xmlns:fi="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="CashflowSimulator.Desktop.Features.StrategyProfiles.StrategyProfilesView"
             x:DataType="vm:StrategyProfilesViewModel">

    <controls:FeatureLayoutView Title="Strategieprofile"
                                Description="Liquiditätsreserve, Rebalancing und Lookahead pro Lebensphase (z. B. Aufbau vs. Entnahme). Werden von Lebensphasen referenziert.">
        <controls:FeatureLayoutView.ActionContent>
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ToolbarButtonSpacing}">
                <Button Classes="toolbar-button primary" Command="{Binding NewCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Add" FontSize="16"/>
                        <TextBlock Text="Neu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Save" FontSize="16"/>
                        <TextBlock Text="Speichern" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Delete" FontSize="16"/>
                        <TextBlock Text="Löschen" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </controls:FeatureLayoutView.ActionContent>
        <controls:MasterDetailView>
            <controls:MasterDetailView.MasterContent>
                <DataGrid ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Liquidität (Monate)" Width="120" Binding="{Binding CashReserveMonths}"/>
                        <DataGridTemplateColumn Width="100" SortMemberPath="RebalancingThreshold">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Rebalancing" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RebalancingThreshold, StringFormat='{}{0:P0}'}"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Lookahead (Monate)" Width="120" Binding="{Binding LookaheadMonths}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </controls:MasterDetailView.MasterContent>
            <controls:MasterDetailView.DetailContent>
                <Grid ColumnDefinitions="220, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID (eindeutig)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Classes="form-input"
                             Text="{Binding Id}" Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="Id"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="Id"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Name"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Classes="form-input"
                             Text="{Binding Name}" Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="Name"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="Name"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Liquiditätsreserve (Monatsausgaben)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="2" Grid.Column="1" Classes="form-input"
                                  Value="{Binding CashReserveMonths}" Increment="1"
                                  Minimum="0"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="CashReserveMonths"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="CashReserveMonths"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Rebalancing-Schwelle (z. B. 0,05 = 5 %)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="3" Grid.Column="1" Classes="form-input"
                                  Value="{Binding RebalancingThreshold}" Increment="0.01"
                                  Minimum="0" Maximum="1"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="RebalancingThreshold"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="RebalancingThreshold"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Lookahead (Monate)"
                               Classes="form-label" Margin="{StaticResource FormLabelMarginLast}"/>
                    <NumericUpDown Grid.Row="4" Grid.Column="1" Classes="form-input"
                                  Value="{Binding LookaheadMonths}" Increment="1"
                                  Minimum="0"
                                  Margin="{StaticResource FormInputMarginLast}"
                                  behaviors:FocusHelpBehavior.HelpKey="LookaheadMonths"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="LookaheadMonths"/>
                </Grid>
            </controls:MasterDetailView.DetailContent>
        </controls:MasterDetailView>
    </controls:FeatureLayoutView>
</UserControl>
