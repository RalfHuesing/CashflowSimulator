<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.Portfolio"
             xmlns:controls="using:CashflowSimulator.Desktop.Common.Controls"
             xmlns:behaviors="using:CashflowSimulator.Desktop.Common.Behaviors"
             xmlns:ext="using:CashflowSimulator.Desktop.Common.Extensions"
             xmlns:fi="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="CashflowSimulator.Desktop.Features.Portfolio.PortfolioView"
             x:DataType="vm:PortfolioViewModel">

    <controls:FeatureLayoutView Title="Vermögenswerte"
                                Description="Vermögenswerte (ETFs, Anleihen, Tagesgeld) und Transaktionshistorie.">
        <controls:FeatureLayoutView.ActionContent>
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ToolbarButtonSpacing}">
                <Button Classes="toolbar-button primary" Command="{Binding NewCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Add" FontSize="16"/>
                        <TextBlock Text="Neu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Save" FontSize="16"/>
                        <TextBlock Text="Speichern" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Delete" FontSize="16"/>
                        <TextBlock Text="Löschen" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </controls:FeatureLayoutView.ActionContent>
        <controls:MasterDetailView>
            <controls:MasterDetailView.MasterContent>
                <StackPanel Spacing="8">
                    <TextBox Text="{Binding SearchText}"
                             Watermark="Suche nach Name oder ISIN..."
                             Padding="8,6"/>
                    <DataGrid ItemsSource="{Binding Assets}"
                              SelectedItem="{Binding SelectedItem}"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Typ" Width="100" Binding="{Binding AssetType, Converter={StaticResource EnumDescriptionConverter}}"/>
                            <DataGridTemplateColumn Width="100" SortMemberPath="CurrentValue">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Wert" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CurrentValue, StringFormat='{}{0:C}'}"
                                                   TextAlignment="Right"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Aktiv" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <fi:SymbolIcon Symbol="Checkmark"
                                                       IsVisible="{Binding IsActiveSavingsInstrument}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </controls:MasterDetailView.MasterContent>
            <controls:MasterDetailView.DetailContent>
                <StackPanel Spacing="16">
                    <Grid ColumnDefinitions="180, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Classes="form-input"
                                 Text="{Binding Name}" Margin="{StaticResource FormInputMargin}"
                                 behaviors:FocusHelpBehavior.HelpKey="Name"
                                 behaviors:FocusHelpBehavior.ErrorPropertyName="Name"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ISIN"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Classes="form-input"
                                 Text="{Binding Isin}" Margin="{StaticResource FormInputMargin}"
                                 behaviors:FocusHelpBehavior.HelpKey="Isin"
                                 behaviors:FocusHelpBehavior.ErrorPropertyName="Isin"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Typ"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Classes="form-input"
                                  ItemsSource="{x:Static vm:PortfolioViewModel.AssetTypeOptions}"
                                  SelectedItem="{Binding SelectedAssetTypeOption}"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="AssetType"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="AssetType">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="ext:EnumDisplayEntry">
                                    <TextBlock Text="{Binding Display}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Marktfaktor"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Classes="form-input"
                                  ItemsSource="{Binding FactorOptions}"
                                  SelectedItem="{Binding SelectedFactor}"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="EconomicFactorId"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="EconomicFactorId">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="vm:FactorOption">
                                    <TextBlock Text="{Binding Display}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Steuerart"
                                   Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" Classes="form-input"
                                  ItemsSource="{x:Static vm:PortfolioViewModel.TaxTypeOptions}"
                                  SelectedItem="{Binding SelectedTaxTypeOption}"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="TaxType"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="TaxType">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="ext:EnumDisplayEntry">
                                    <TextBlock Text="{Binding Display}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Aktiv bespart"
                                   Classes="form-label" Margin="{StaticResource FormLabelMarginLast}"/>
                        <CheckBox Grid.Row="5" Grid.Column="1" Content="Dieses Asset wird aktuell bespart"
                                  IsChecked="{Binding IsActiveSavingsInstrument}"
                                  Margin="{StaticResource FormInputMarginLast}"
                                  behaviors:FocusHelpBehavior.HelpKey="IsActiveSavingsInstrument"/>
                    </Grid>

                    <TextBlock Text="Transaktionen (nur Anzeige)" FontWeight="SemiBold" Margin="0,8,0,4"/>
                    <DataGrid ItemsSource="{Binding SelectedAssetTransactions}"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              MinHeight="120">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Width="110" Binding="{Binding Date}"/>
                            <DataGridTextColumn Header="Typ" Width="90" Binding="{Binding Type, Converter={StaticResource EnumDescriptionConverter}}"/>
                            <DataGridTemplateColumn Header="Menge" Width="80" SortMemberPath="Quantity">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Quantity, StringFormat='{}{0:N2}'}"
                                                   TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Preis" Width="90" SortMemberPath="PricePerUnit">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PricePerUnit, StringFormat='{}{0:C}'}"
                                                   TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Gesamt" Width="100" SortMemberPath="TotalAmount">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:C}'}"
                                                   TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </controls:MasterDetailView.DetailContent>
        </controls:MasterDetailView>
    </controls:FeatureLayoutView>
</UserControl>
