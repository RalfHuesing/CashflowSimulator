<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CashflowSimulator.Desktop.Features.LifecyclePhases"
             xmlns:controls="using:CashflowSimulator.Desktop.Common.Controls"
             xmlns:behaviors="using:CashflowSimulator.Desktop.Common.Behaviors"
             xmlns:fi="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
             x:Class="CashflowSimulator.Desktop.Features.LifecyclePhases.LifecyclePhasesView"
             x:DataType="vm:LifecyclePhasesViewModel"
             x:Name="ThisView">

    <controls:FeatureLayoutView Title="Lebensphasen"
                                Description="Phasen ab Alter (z. B. Anspar ab Start, Rente ab 67). Pro Phase: Steuer- und Strategie-Profil.">
        <controls:FeatureLayoutView.ActionContent>
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource ToolbarButtonSpacing}">
                <Button Classes="toolbar-button primary" Command="{Binding NewCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Add" FontSize="16"/>
                        <TextBlock Text="Neu" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Save" FontSize="16"/>
                        <TextBlock Text="Speichern" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="toolbar-button" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <fi:SymbolIcon Symbol="Delete" FontSize="16"/>
                        <TextBlock Text="LÃ¶schen" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </controls:FeatureLayoutView.ActionContent>
        <controls:MasterDetailView>
            <controls:MasterDetailView.MasterContent>
                <DataGrid ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem}"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Startalter" Width="100" Binding="{Binding StartAge}"/>
                        <DataGridTemplateColumn Header="Steuer-Profil" Width="*" SortMemberPath="TaxProfileId">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource IdToNameConverter}">
                                                <Binding Path="TaxProfileId"/>
                                                <Binding Path="DataContext.TaxProfileOptions" ElementName="ThisView"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Strategie-Profil" Width="*" SortMemberPath="StrategyProfileId">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource IdToNameConverter}">
                                                <Binding Path="StrategyProfileId"/>
                                                <Binding Path="DataContext.StrategyProfileOptions" ElementName="ThisView"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Allokation" Width="*" SortMemberPath="AllocationProfileId">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource IdToNameConverter}">
                                                <Binding Path="AllocationProfileId"/>
                                                <Binding Path="DataContext.AllocationProfileOptions" ElementName="ThisView"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Glidepath (Monate)" Width="100" Binding="{Binding GlidepathMonths}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </controls:MasterDetailView.MasterContent>
            <controls:MasterDetailView.DetailContent>
                <Grid ColumnDefinitions="200, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Startalter (Jahre)"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <NumericUpDown Grid.Row="0" Grid.Column="1" Classes="form-input"
                                  Value="{Binding StartAge}" Increment="1"
                                  Minimum="0" Maximum="120"
                                  Margin="{StaticResource FormInputMargin}"
                                  behaviors:FocusHelpBehavior.HelpKey="StartAge"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="StartAge"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Steuer-Profil"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Classes="form-input"
                             ItemsSource="{Binding TaxProfileOptions}"
                             SelectedItem="{Binding SelectedTaxProfile}"
                             Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="TaxProfileId"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="TaxProfileId">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="vm:ProfileOption">
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Strategie-Profil"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Classes="form-input"
                             ItemsSource="{Binding StrategyProfileOptions}"
                             SelectedItem="{Binding SelectedStrategyProfile}"
                             Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="StrategyProfileId"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="StrategyProfileId">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="vm:ProfileOption">
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Allokationsprofil"
                               Classes="form-label" Margin="{StaticResource FormLabelMargin}"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Classes="form-input"
                             ItemsSource="{Binding AllocationProfileOptions}"
                             SelectedItem="{Binding SelectedAllocationProfile}"
                             Margin="{StaticResource FormInputMargin}"
                             behaviors:FocusHelpBehavior.HelpKey="AllocationProfileId"
                             behaviors:FocusHelpBehavior.ErrorPropertyName="AllocationProfileId">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="vm:ProfileOption">
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Glidepath (Monate)"
                               Classes="form-label" Margin="{StaticResource FormLabelMarginLast}"/>
                    <NumericUpDown Grid.Row="4" Grid.Column="1" Classes="form-input"
                                  Value="{Binding GlidepathMonths}" Increment="12"
                                  Minimum="0"
                                  Margin="{StaticResource FormInputMarginLast}"
                                  behaviors:FocusHelpBehavior.HelpKey="GlidepathMonths"
                                  behaviors:FocusHelpBehavior.ErrorPropertyName="GlidepathMonths"/>
                </Grid>
            </controls:MasterDetailView.DetailContent>
        </controls:MasterDetailView>
    </controls:FeatureLayoutView>
</UserControl>
